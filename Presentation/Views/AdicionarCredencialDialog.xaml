<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="Presentation.Views.AdicionarCredencialDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Adicionar credencial"
    PrimaryButtonText="Salvar"
    SecondaryButtonText="Cancelar"
    DefaultButton="Primary"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonStyle="{StaticResource DefaultButtonStyle}" Loaded="ContentDialog_Loaded">

        <ScrollViewer x:Name="MainScrollViewer" VerticalScrollBarVisibility="Auto" Padding="0">
            <StackPanel x:Name="spPrincipal" 
                    Width="500"
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Stretch" 
                    Spacing="18" 
                    Background="{StaticResource Nenhuma}" 
                    Padding="20" 
                    CornerRadius="10">

                <StackPanel x:Name="spCategoria" Spacing="6">
                    <TextBlock Text="Categoria"/>
                    <Grid Padding="0" Margin="0,0,0,0">
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" RowSpacing="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,0" ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="32"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox x:Name="cboCategoria" 
                                          DisplayMemberPath="Categoria" 
                                          ItemsSource="{Binding Categoria}" 
                                          SelectedItem="{Binding CategoriaSelecionada, Mode=TwoWay}" 
                                          MinWidth="417" 
                                          HorizontalAlignment="Stretch" />
                                
                                <Button x:Name="btnConfigCategoria" Click="btnConfigCategoria_Click" Grid.Column="1" Padding="0" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource DefaultButtonStyle}">
                                    <FontIcon Glyph="&#xE972;" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                                </Button>
                            </Grid>

                            <StackPanel x:Name="CategoriaExpander" Grid.Row="1" Spacing="8" Orientation="Vertical" Visibility="Collapsed" Padding="20" Background="{StaticResource Cinza11Transp50}" CornerRadius="10">
                                <TextBlock Text="Editar categoria" HorizontalAlignment="Stretch"/>
                                <TextBox x:Name="txtCategoria" Text="" HorizontalAlignment="Stretch" IsEnabled="False"/>

                                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                                    <Button x:Name="btnExcluirCategoria" Click="btnExcluirCategoria_Click" Padding="0" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource AlternateCloseButtonStyle}">
                                        <FontIcon Glyph="&#xE74D;" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                                    </Button>
                                    <Button x:Name="btnAlterarCategoria" Padding="0" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource AlternateCloseButtonStyle}">
                                        <FontIcon Glyph="&#xEB7E;" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                                    </Button>
                                    <Button x:Name="btnNovaCategoria" Padding="0" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource AlternateCloseButtonStyle}">
                                        <FontIcon Glyph="&#xE710;" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                                    </Button>
                                    <Button x:Name="btnSalvarCategoria" Padding="0" Width="32" Height="32" IsEnabled="False" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource AlternateCloseButtonStyle}">
                                        <FontIcon Glyph="&#xE74E;" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </StackPanel>

                <Border x:Name="bCredencial" Background="{StaticResource Cinza9}" Height="1"></Border>

                <StackPanel x:Name="spCredencial" Spacing="6">
                    <TextBlock Text="Credencial"/>
                    <Grid Padding="0">
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" RowSpacing="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,10" ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="32"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="txtCredencial" MinWidth="417" MaxWidth="417" HorizontalAlignment="Stretch" />
                                <Button x:Name="btnConfigCredencial" Click="btnConfigCredencial_Click" Grid.Column="1" Padding="0" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource DefaultButtonStyle}">
                                    <FontIcon Glyph="&#xE972;" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                                </Button>
                            </Grid>

                            <StackPanel x:Name="CredencialExpander" Grid.Row="1" Spacing="8" Orientation="Vertical" Visibility="Collapsed" Padding="20" Background="{StaticResource Cinza11Transp50}" CornerRadius="10">
                                <TextBlock Text="Gerar credencial aleatória" HorizontalAlignment="Stretch"/>
                                
                                <Border Background="{StaticResource Cinza9}" Height="1"/>
                                
                                <CheckBox x:Name="chkLetraMinuscula" Content="Letras minúsculas" IsChecked="True" FlowDirection="LeftToRight"/>
                                <CheckBox x:Name="chkLetraMaiuscula" Content="Letras maiúsculas" FlowDirection="LeftToRight"/>
                                <CheckBox x:Name="chkNumeros" Content="Números" FlowDirection="LeftToRight"/>
                                <CheckBox x:Name="chkSimbolos" Content="Símbolos" FlowDirection="LeftToRight"/>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                                    <NumberBox x:Name="nbQuantidadeMinimaCredencial" ValueChanged="nbQuantidadeMinimaCredencial_ValueChanged" Value="8" Minimum="3" Maximum="128" SpinButtonPlacementMode="Hidden" MaxWidth="64" HorizontalAlignment="Left"/>
                                    <TextBlock Text="Quantidade mínima de caracteres" VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                                    <NumberBox x:Name="nbQuantidadeMaximaCredencial" ValueChanged="nbQuantidadeMaximaCredencial_ValueChanged" Value="16" Minimum="3" Maximum="128" SpinButtonPlacementMode="Hidden" MaxWidth="64" HorizontalAlignment="Left"/>
                                    <TextBlock Text="Quantidade máxima de caracteres" VerticalAlignment="Center"/>
                                </StackPanel>
                                <Border Background="{StaticResource Cinza9}" Height="1" Margin="0,8,0,0"/>

                                <Button x:Name="btnGerarCredencial" Click="btnGerarCredencial_Click" Padding="0" Margin="0,8,0,0" Height="32" HorizontalAlignment="Stretch" VerticalAlignment="Center" Style="{StaticResource DefaultButtonStyle}">
                                    <StackPanel Orientation="Horizontal" Spacing="8" Padding="0" VerticalAlignment="Center">
                                        <TextBlock Text="Gerar" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                
                            </StackPanel>

                        </Grid>
                    </Grid>
                </StackPanel>

                <Border x:Name="bSenha" Background="{StaticResource Cinza9}" Height="1"></Border>

                <StackPanel x:Name="spSenha" Spacing="6">
                    <TextBlock Text="Senha"/>
                    <Grid Padding="0">
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" RowSpacing="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,10" ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="32"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="txtSenha" MinWidth="417" MaxWidth="417" HorizontalAlignment="Stretch" />
                                <Button x:Name="btnConfigSenha" Click="btnConfigSenha_Click" Grid.Column="1" Padding="0" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource DefaultButtonStyle}">
                                    <FontIcon Glyph="&#xE972;" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                                </Button>
                            </Grid>

                            <StackPanel x:Name="SenhaExpander" Grid.Row="1" Spacing="8" Orientation="Vertical" Visibility="Collapsed" Padding="20" Background="{StaticResource Cinza11Transp50}" CornerRadius="10">
                                <TextBlock Text="Gerar senha aleatória" HorizontalAlignment="Stretch"/>
                                
                                <Border Background="{StaticResource Cinza9}" Height="1"/>
                                
                                <CheckBox x:Name="chkLetraMinusculaSenha" Content="Letras minúsculas" IsChecked="True" FlowDirection="LeftToRight"/>
                                <CheckBox x:Name="chkLetraMaiusculaSenha" Content="Letras maiúsculas" FlowDirection="LeftToRight"/>
                                <CheckBox x:Name="chkNumerosSenha" Content="Números" FlowDirection="LeftToRight"/>
                                <CheckBox x:Name="chkSimbolosSenha" Content="Símbolos" FlowDirection="LeftToRight"/>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                                <NumberBox x:Name="nbQuantidadeMinimaSenha" Value="8" Minimum="8" Maximum="128" SpinButtonPlacementMode="Hidden" MaxWidth="64" HorizontalAlignment="Left"/>
                                    <TextBlock Text="Quantidade mínima de caracteres" VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                                <NumberBox x:Name="nbQuantidadeMaximaSenha" Value="16" Minimum="8" Maximum="128" SpinButtonPlacementMode="Hidden" MaxWidth="64" HorizontalAlignment="Left"/>
                                    <TextBlock Text="Quantidade máxima de caracteres" VerticalAlignment="Center"/>
                                </StackPanel>
                                <Border Background="{StaticResource Cinza9}" Height="1" Margin="0,8,0,0"/>

                                <Button x:Name="btnGerarSenha" Click="btnGerarSenha_Click" Padding="0" Margin="0,8,0,0" Height="32" HorizontalAlignment="Stretch" VerticalAlignment="Center" Style="{StaticResource DefaultButtonStyle}">
                                    <StackPanel Orientation="Horizontal" Spacing="8" Padding="0" VerticalAlignment="Center">
                                        <TextBlock Text="Gerar" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                        </Grid>
                    </Grid>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

</ContentDialog>
