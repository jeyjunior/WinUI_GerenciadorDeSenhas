<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Presentation.Views.Principal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Presentation.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource Cinza13}" RowSpacing="12" Padding="32,18,32,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <!-- Ordenação -->
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="180"/>

            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                <!-- Ordenação -->
                <ComboBox x:Name="cboTipoDeOrdenacao"
                  Padding="8,0,0,0" 
                  Height="32"
                  Width="130"
                  DisplayMemberPath="Valor"
                  ItemsSource="{Binding TipoDeOrdenacao}"
                  SelectedItem="{Binding TipoDeOrdenacaoSelecionado, Mode=TwoWay}"
                  HorizontalContentAlignment="Center"
                  VerticalAlignment="Center"/>
                <Button x:Name="btnOrdenar" Click="btnOrdenar_Click" Grid.Column="1" Padding="0" Width="32" Height="32" Style="{StaticResource AlternateCloseButtonStyle}">
                    <FontIcon Glyph="&#xE8CB;" FontFamily="Segoe Fluent Icons" FontSize="18"/>
                </Button>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                <!-- Pesquisa -->
                <ComboBox x:Name="cboTipoDePesquisa"
                  DisplayMemberPath="Valor"
                  Padding="8,0,0,0" 
                  Height="32"
                  Width="130"
                  ItemsSource="{Binding TipoDePesquisa}"
                  SelectedItem="{Binding TipoDePesquisaSelecionado, Mode=TwoWay}"
                  HorizontalContentAlignment="Center"
                  VerticalAlignment="Center"/>

                <TextBox x:Name="txtPesquisa" KeyDown="txtPesquisa_KeyDown" Height="26" MinWidth="300"  Padding="8,6,0,0"/>

                <Button x:Name="btnPesquisar" Click="btnPesquisar_Click" Grid.Column="1" Padding="0,0,0,2" Width="110" VerticalAlignment="Center" Height="32" Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8" Padding="0" VerticalAlignment="Center">
                        <FontIcon Glyph="&#xE721;" FontFamily="Segoe Fluent Icons" VerticalAlignment="Center" FontSize="18"/>
                        <TextBlock Text="Pesquisar" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                <Button x:Name="btnConfigurar" Click="btnConfigurar_Click" Grid.Column="1" Padding="0,0,0,2" Width="32" VerticalAlignment="Center" Height="32" Style="{StaticResource AlternateCloseButtonStyle}">
                    <FontIcon Glyph="&#xE713;" FontFamily="Segoe Fluent Icons" VerticalAlignment="Center" FontSize="18"/>
                </Button>
                <Button x:Name="btnAdicionar" Click="btnAdicionar_Click" Grid.Column="1" Padding="0" Width="120" VerticalAlignment="Center" Height="32" Style="{StaticResource DefaultButtonStyle}" Background="{StaticResource Verde2}" >
                    <StackPanel Orientation="Horizontal" Spacing="8" Padding="0" VerticalAlignment="Center">
                        <FontIcon Glyph="&#xE710;" FontFamily="Segoe Fluent Icons" VerticalAlignment="Center" FontSize="18"/>
                        <TextBlock Text="Adicionar" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <ListView Grid.Row="1" x:Name="listaCredenciais" ItemsSource="{Binding Credenciais}" HorizontalContentAlignment="Stretch">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="Transparent"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Margin" Value="2"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border x:Name="BorderContainer" Background="{StaticResource Cinza10Transp10}" BorderBrush="{StaticResource Nenhuma}" BorderThickness="0" CornerRadius="5">
                                    <ContentPresenter />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnSpacing="18" Height="70" Margin="0" Padding="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <Grid Padding="0" Margin="0" Background="{StaticResource Cinza11}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="20"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                       Text="{Binding Categoria, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" 
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       HorizontalTextAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       TextWrapping="WrapWholeWords"/>
                            
                            <TextBlock Grid.Row="1" 
                                       Text="{Binding Modificacao, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" 
                                       HorizontalAlignment="Center" 
                                       FontSize="11" 
                                       Foreground="{StaticResource Cinza2}"/>
                        </Grid>

                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="38"/>
                                <ColumnDefinition Width="18"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center" MinWidth="150">
                                <TextBlock Text="Credencial" FontSize="11" Margin="0,0,0,2"/>
                                <TextBlock Text="{Binding Credencial, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" FontSize="13" FontWeight="Bold" TextWrapping="Wrap"/>
                            </StackPanel>

                            <Button x:Name="btnCopiarCredencial" Click="btnCopiarCredencial_Click" Grid.Column="1" Padding="0" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource AlternateCloseButtonStyle}">
                                <FontIcon Glyph="&#xE8C8;" FontFamily="Segoe Fluent Icons" FontSize="18"/>
                            </Button>

                            <Border Grid.Column="2" Width="1" HorizontalAlignment="Center" Height="40" Background="{StaticResource Cinza6}"/>
                        </Grid>

                        <Grid Grid.Column="2"  ColumnSpacing="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="32"/>
                                <ColumnDefinition Width="32"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center" MinWidth="150">
                                <TextBlock Text="Senha" FontSize="11" Margin="0,0,0,2"/>
                                <TextBlock Text="{Binding Senha, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" FontSize="13" FontWeight="Bold" TextWrapping="Wrap"/>
                            </StackPanel>

                            <Button x:Name="btnExibirSenha" Click="btnExibirSenha_Click" Grid.Column="1" Padding="0" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{Binding BotaoStyle}">
                                <FontIcon Glyph="&#xE7B3;" FontFamily="Segoe Fluent Icons" FontSize="18"/>
                            </Button>
                            
                            <Button x:Name="btnCopiarSenha" Click="btnCopiarSenha_Click" Grid.Column="2" Padding="0" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource AlternateCloseButtonStyle}">
                                <FontIcon Glyph="&#xE8C8;" FontFamily="Segoe Fluent Icons" FontSize="18"/>
                            </Button>
                        </Grid>

                        <StackPanel Grid.Column="3" Padding="16,0,0,0" Margin="0" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="70" Background="{StaticResource Cinza11}">
                            <Button x:Name="btnExcluir" Click="btnExcluir_Click" Padding="0" Width="40" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{StaticResource Vermelho3}" BorderThickness="0" Style="{StaticResource DefaultButtonStyle}">
                                <FontIcon Glyph="&#xE74D;" FontFamily="Segoe Fluent Icons" FontSize="20" />
                            </Button>

                            <Button x:Name="btnAlterar" Click="btnAlterar_Click" Padding="0" Width="40" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{StaticResource Laranja}" BorderThickness="0" Style="{StaticResource DefaultButtonStyle}">
                                <FontIcon Glyph="&#xEB7E;" FontFamily="Segoe Fluent Icons" FontSize="20" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock x:Name="txtStatus" Grid.Row="2" Text="Credenciais cadastradas: 9999" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="{StaticResource Cinza4}"/>
    </Grid>
</Page>
